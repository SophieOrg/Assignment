@model MedNoteCreateViewModel

<style>
                body {font-family: "Times New Roman", Georgia, Serif;}
                h1, h2, h3, h4, h5, h6 {
                font-family: "Playfair Display";
                letter-spacing: 5px;
                }
</style>

<partial name="_Breadcrumbs" model=@(new [] { ("/", "Home"), ("/MedicalHistory", "MedicalHistory"), ("","Create") })>

<h3 class="mt-4 mb-4">Create Medical History Note</h3>

<form asp-action="Create">

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="mt-3">
        <label asp-for="DogId" class="form-label"></label>      
        <select asp-for="DogId" class="form-control" 
                asp-items="@Model.Dogs"))">
            <option disable selected>Select Dog</option>
        </select>
        <span asp-validation-for="DogId" class="text-danger"></span>
    </div>

    <div class="mt-3">
        <label asp-for="Report" class="form-label"></label>      
        <textarea rows="5" asp-for="Report" class="form-control"></textarea>
        <span asp-validation-for="Report" class="text-danger"></span>
    </div>

    <div class="mt-3">
        <label asp-for="Medication" class="form-label"></label>      
        <textarea rows="5" asp-for="Medication" class="form-control"></textarea>
        <span asp-validation-for="Medication" class="text-danger"></span>
    </div>
   
    <div class="mt-3">
        <input type="submit" value="Create" class="btn btn-primary"/>
        <a class="btn btn-secondary" asp-action="Index">Cancel</a>
    </div>

</form>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}