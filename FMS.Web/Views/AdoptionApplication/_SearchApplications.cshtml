@model AdoptionApplicationSearchViewModel


<!-- search form -->
<form asp-controller="AdoptionApplication" asp-action="Index" class="d-flex flex-row align-items-center">
    <div class="form-check me-3">
        <input class="form-check-input" type="radio" asp-for="AdoptionApplicationRange" value="@AdoptionApplicationRange.ALL">
        <label class="form-check-label" for="Range">All</label>
    </div>
    <div class="form-check me-3">
        <input class="form-check-input" type="radio" asp-for="AdoptionApplicationRange" value="@AdoptionApplicationRange.APPROVED">
        <label class="form-check-label" for="Range">Approved</label>
    </div>
    <div class="form-check me-3">
        <input class="form-check-input" type="radio" asp-for="AdoptionApplicationRange" value="@AdoptionApplicationRange.AWAITING" >
        <label class="form-check-label" for="Range">Awaiting</label>
    </div>
   
    <button class="btn standard" type="submit">Search</button>
</form>