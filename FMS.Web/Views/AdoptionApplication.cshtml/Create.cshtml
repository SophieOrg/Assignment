@model AdoptionApplicationCreateViewModel

<partial name="_Breadcrumbs" model=@(new [] { ("/", "Home"), ("/AdoptionApplication", "AdoptionApplications"), ("","Create") })>

<h3 class="mt-4 mb-4">Create Adoption Application</h3>

<form asp-action="Create">

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="mt-3">
        <label asp-for="DogId" class="form-label"></label>      
        <select asp-for="DogId" class="form-control" 
                asp-items="@Model.Dogs"))">
            <option>Select Dog</option>
        </select>
        <span asp-validation-for="DogId" class="text-danger"></span>
    </div>

    <div class="mt-3">
        <label asp-for="Name" class="form-label"></label>      
        <textarea rows="5" asp-for="Name" class="form-control"></textarea>
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mt-3">
        <label asp-for="Email" class="form-label"></label>      
        <textarea rows="5" asp-for="Email" class="form-control"></textarea>
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="mt-3">
        <label asp-for="PhoneNumber" class="form-label"></label>      
        <textarea rows="5" asp-for="PhoneNumber" class="form-control"></textarea>
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>

     <div class="mt-3">
        <label asp-for="Information" class="form-label"></label>      
        <textarea rows="5" asp-for="Information" class="form-control"></textarea>
        <span asp-validation-for="Information" class="text-danger"></span>
    </div>
   
    <div class="mt-3">
        <input type="submit" value="Create" class="btn btn-primary"/>
        <a class="btn btn-secondary" asp-action="Index">Cancel</a>
    </div>

</form>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}