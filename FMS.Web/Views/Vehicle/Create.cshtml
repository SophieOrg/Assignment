@model Vehicle

<partial name="_BreadCrumbs" model=@(new [] {
    ("/","Home"),
    ("/vehicle","Vehicles"),
    ("","Create")
}) />

<h3 class="my-4">Create Vehicle</h3>

<div class="card rounded shadow p-3">
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="mt-3">
            <label asp-for="Make" class="form-label"></label>
            <input asp-for="Make" class="form-control"/>
            <span asp-validation-for="Make" class="text-danger"></span>
        </div>
    
        <div class="mt-3">
            <label asp-for="Model" class="form-label"></label>
            <input asp-for="Model" class="form-control"/>
            <span asp-validation-for="Model" class="text-danger"></span>
        </div>

        <div class="mt-3">
            <label asp-for ="Year" class="form-label"></label>
            <input asp-for="Year" class="form-control"/>
            <span asp-validation-for="Year" class="text-danger"></span>
        </div>

        <div>
            <label asp-for="Registration" class="form-label"></label>
            <input asp-for="Registration" class="form-control"/>
            <span asp-validation-for="Registration" class="text-danger"></span>
        </div>

        <div class="mt-3">
            <label asp-for="FuelType" class="form-label"></label>
            <input asp-for="FuelType" class="form-control"/>
            <span asp-validation-for="FuelType" class="text-danger"></span>
        </div>

        <div class="mt-3">
            <label asp-for="BodyType" class="form-label"></label>
            <input asp-for="BodyType" class="form-control"/>
            <span asp-validation-for="BodyType" class="text-danger"></span>
        </div>

        <div class="mt-3">
            <label asp-for="TransmissionType" class="form-label"></label>
            <input asp-for="TransmissionType" class="form-control"/>
            <span asp-validation-for="TransmissionType" class="text-danger"></span>
        </div>

        <div class="mt-3">
            <label asp-for="CC" class="form-label"></label>
            <input asp-for="CC" class="form-control"/>
            <span asp-validation-for="CC" class="text-danger"></span>
        </div>

        <div class="mt-3">
            <label asp-for="No0fDoors" class="form-label"></label>
            <input asp-for="No0fDoors" class="form-control"/>
            <span asp-validation-for="No0fDoors" class="text-danger"></span>
        </div>

        <div class="mt-3">
            <label asp-for="MotDue" class="form-label"></label>
            <input asp-for="MotDue" class="form-control"/>
            <span asp-validation-for="MotDue" class="text-danger"></span>
        </div>

        <div class="mt-3">
            <label asp-for="PhotoUrl" class="form-label"></label>
            <input type="url" asp-for="PhotoUrl" class="form-control"/>
            <span asp-validation-for="PhotoUrl" class="text-danger"></span>
        </div>

        <div class="mt-3">
            <input type="submit" value="Create" class="btn btn-primary"/>
            <a class="btn btn-secondary" asp-action="Index">Cancel</a>
        </div>


    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
 