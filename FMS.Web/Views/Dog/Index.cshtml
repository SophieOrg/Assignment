@model IList<Dog>

<style>
        body {font-family: "Times New Roman", Georgia, Serif;}
        h1, h2, h3, h4, h5, h6 {
        font-family: "Playfair Display";
        letter-spacing: 5px;
        }
</style>    

<partial name="_BreadCrumbs" model=@(new [] {
    ("/","Home"),
    ("","Dogs")
}) />

<a asp-condition=@User.HasOneOfRoles("manager,admin") class="btn btn-sm standard my-3" asp-action="Create" >
    <i class="bi bi-plus"></i> Add New Dog
</a>


<section class="dogs" id="dogs" >
    <div class="box-container">
        @foreach(var v in Model)
        {  
           <div class="box">
                <h3>@v.Name</h3>
                <div>
                    @if (v.PhotoUrl != null)
                    {
                        <img src="@Url.Content(v.PhotoUrl)" class="center" width = "180" height = "150" alt = "Image"/>
                    }
            
                </div>
                <div class="mt-2">
                  <!-- Add View link -->
                    <a data-bs-toggle="tooltip" data-bs-placement="top" title="view dog details" asp-controller="Dog"
                     asp-action="Details" asp-route-id=@v.Id><i class="bi bi-display"></i></a>  
                    <!-- Add edit link  -->
                    <a asp-condition=@(User.IsInRole("admin") || User.IsInRole("manager")) 
                     asp-action="Edit" asp-route-id=@v.Id><i class="bi bi-pen"></i></a>
                    <!-- Add delete link -->
                    <a asp-condition=@(User.IsInRole("admin") || User.IsInRole("manager")) asp-action="Delete" 
                     asp-route-id=@v.Id><i class="bi bi-trash"></i></a>

                </div>
           </div>  
                    
        }
        
    </div>
</section>


           
                


