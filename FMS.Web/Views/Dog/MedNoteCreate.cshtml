@model MedicalHistory

<style>
                body {font-family: "Times New Roman", Georgia, Serif;}
                h1, h2, h3, h4, h5, h6 {
                font-family: "Playfair Display";
                letter-spacing: 5px;
                }
</style>

<h3 class="mt-4">Create Medical History Note</h3>

<partial name="_BreadCrumbs" model=@(new [] {
    ("/","Home"),
    ("/dog","Dogs"),
    ($"/dog/details/{Model.DogId}",$"{Model.DogId}"),
    ("","Create MedicalHistory")
}) />

<form asp-action="MedNoteCreate">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
   
    <input type="hidden" asp-for="DogId" class="form-control"/>
    
    <div class="mt-3">
        <label asp-for="CreatedOn" class="form-label"></label>
        <input asp-for="CreatedOn" class="form-control"/>
        <span asp-validation-for="CreatedOn" class="text-danger"></span>
    </div>

    <div class="mt-3">
        <label asp-for="Report" class="form-label"></label>      
        <textarea rows="5" asp-for="Report" class="form-control"></textarea>
        <span asp-validation-for="Report" class="text-danger"></span>
    </div>

    <div class="mt-3">
        <label asp-for="Medication" class="form-label"></label>      
        <textarea rows="5" asp-for="Medication" class="form-control"></textarea>
        <span asp-validation-for="Medication" class="text-danger"></span>
    </div>
   
    <div class="mt-3">
        <input type="submit" value="Create" class="btn btn-primary"/>
        <a class="btn btn-secondary" asp-action="Details" asp-route-id=@Model.DogId>Cancel</a>
    </div>
</form>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}