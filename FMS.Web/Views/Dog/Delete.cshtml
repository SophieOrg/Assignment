@model Dog

<partial name="_BreadCrumbs" model=@(new [] {
    ("/","Home"),
    ("/dog","Dogs"),
    ($"/dog/details/{Model.Id}",$"{Model.Id}"),
    ("","Delete")
}) />

<h3 class="mt-4 mb-4">Delete Dog</h3>

<h4 class="mb-4">Are you sure you want to delete this dog?</h4>

<div>
    <div class="col card rounded shadow p-3">
        <dl class="row">       
            <dt class="col-5">Breed</dt>
            <dd class="col-7">@Model.Breed</dd>

            <dt class="col-5">Name</dt>
            <dd class="col-7">@Model.Name</dd>
            
            <dt class="col-5">Chip Number</dt>
            <dd class="col-7">@Model.ChipNumber</dd>

            <dt class="col-5">Age</dt>
            <dd class="col-7">@Model.Age</dd>
        </dl>
    </div>

    <div class="mt-4">
        <form asp-action="DeleteConfirm" type="post">
            <input type="hidden" asp-for="Id"/>
            <input type="submit" value="Confirm" class="btn btn-danger" />
            <a class="btn btn-secondary" asp-controller="Dog" asp-action="Index" >Cancel</a>
        </form>
    </div>
    
</div>